{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compose: Rails console with debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "run",
                "--rm",
                "--publish",
                "1234:1234",
                "--entrypoint",
                "''",
                "${service}",
                // rdebug-ide
                "rdebug-ide",
                "--host",
                "0.0.0.0",
                "--port",
                "1234",
                "--",
                // rails console
                "bin/rails",
                "console"
            ],
            "group": "test"
        },
        {
            "label": "Compose: Run rake task",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "run",
                "--rm",
                "--entrypoint",
                "''",
                "${input:pickService}",
                // rake task
                "bin/rails",
                "${input:rakeTask}"
            ],
            "group": "test",
        },
        {
            "label": "Run rdebug-ide",
            "type": "shell",
            "command": "rdebug-ide --host 0.0.0.0 --port 1234 -- bin/rails server -b 0.0.0.0",
            "group": "test",
        }
    ],
    "options": {
        "env": {
            "service": "ap"
        }
    },
    "inputs": [
        {
            "type": "promptString",
            "id": "rakeTask",
            "description": "rake task?"
        },
        {
            "id": "pickService",
            "type": "pickString",
            "description": "select service",
            "options": [
                "ap",
            ],
            "default": "ap"
        }
    ]
}