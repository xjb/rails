{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compose: Rails console with debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "run",
                "--rm",
                "--publish",
                "1234:1234",
                "--entrypoint",
                "''",
                "${service}",
                // rdebug-ide
                "rdebug-ide",
                "--host",
                "0.0.0.0",
                "--port",
                "1234",
                "--",
                // rails console
                "bin/rails",
                "console"
            ],
            "group": "test"
        },
    ],
    "options": {
        "env": {
            "service": "ap"
        }
    },
}